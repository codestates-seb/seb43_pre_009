{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/react-in-jsx-scope": 0,
    "react/jsx-uses-react": 0,
    "prettier/prettier": "error",
    "import/no-named-as-default": "off",
    "jsx-a11y/click-events-have-key-events": "off", // 웹 접근성 오류 무시
    "jsx-a11y/no-noninteractive-element-interactions": "off", // 웹 접근성 오류 무시
    "jsx-a11y/no-noninteractive-tabindex": "off" // 웹 접근성 오류 무시
  }
}
